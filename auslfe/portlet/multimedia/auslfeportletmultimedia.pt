<dl i18n:domain="auslfe.portlet.multimedia"
    tal:define="portlet_class view/getPortletClass"
    tal:attributes="class string:$portlet_class portlet portletMultimedia auslUSPortlet">
    
    <dt class="portletHeader noTitle">
        <span class="portletTopLeft"></span>
        <span class="icon_title"></span>
        <span class="portlet_title" tal:content="view/data/portlet_title">
           Title
        </span>
        <span class="portletTopRight"></span>
    </dt>
    
    <dd class="portletItem navMultimedia">
    	<div tal:replace="structure view/data/portlet_text" />
    </dd>
    
    <dd class="portletItem">
		<div class="galleryMultimedia" tal:define="standard_results python: view.results()"
									   tal:repeat="image standard_results">
			<div class="foto_m"><img tal:attributes="src python: image.getURL() + '/image_tile'" /></div>
		</div>
		<div class="visualClear"></div>
	</dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <a class="tile" href="#" tal:attributes="href python: view.getTargetCollectionPath()">
        	<span tal:content="python: view.data.target_collection_title or 'Tutte le foto'">
           		Tutte le foto
           </span>
           <span>
           		&raquo;
           </span>
        </a>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
